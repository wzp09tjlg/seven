<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_focused="false" android:state_pressed="false" android:state_selected="false">
        <shape>
            <solid android:color="@color/color_item_bg"/>
        </shape>
    </item>
    <item android:state_focused="false" android:state_pressed="false" android:state_selected="true">
        <shape>
            <solid android:color="@color/color_item_bg_select"/>
        </shape>
    </item>
    <item android:state_focused="true" android:state_pressed="false" android:state_selected="true">
        <shape>
            <solid android:color="@color/color_item_bg_select"/>
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/color_item_bg_select"/>
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/color_item_bg"/>
        </shape>
    </item>

</selector>